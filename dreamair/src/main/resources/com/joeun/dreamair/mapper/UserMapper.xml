    <!-- 회원 조회 - id -->
    <select id="selectById" resultType="Users">
        SELECT *
        FROM users
        WHERE user_id = #{userId}
    </select>

    <!-- 회원 권한 등록 -->
    <insert id="insertAuth">
        INSERT INTO auth( user_id, auth ) 
        VALUES ( #{userId}, #{auth} )
    </insert>

    <!-- 회원 등록 -->
    <insert id="insert">
        INSERT INTO users( user_id, user_pw, name, email, phone, address )
        VALUES ( #{userId}, #{userPw}, #{name} ,#{email}, #{phone}, #{address} )
    </insert>


    <!-- 회원 수정 -->
    <update id="update">
        UPDATE users
           SET user_id = #{userId}
              ,user_pw = #{userPw}
              ,name = #{name}
              ,phone = #{phone}
              ,email = #{email}
              ,address = #{address}
        WHERE user_id = #{userId}
    </update>

    <!-- 회원 탈퇴 -->
    <delete id="delete">
        DELETE FROM user
        WHERE user_id = #{userId}
    </delete>


</mapper>